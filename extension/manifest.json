{
  "manifest_version": 2,
  "name": "Teamwork Chat Pro",
  "version": "0.0.0.2",
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "options_page": "popup.html",
  "options_ui": {
    "page": "popup.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.teamwork.com/chat/*",
        "https://*.teamwork.com/chat/*"
      ],
      "js": [
          "js/jquery.min.js", 
          "js/popper.min.js",
          "js/bootstrap.min.js",
          "js/mdb.min.js",
          "js/insQ.min.js",
          "js/random-name-generator.js", 
          "js/settings.js", 
          "js/popup.js", 
          "js/content.js"
        ],
      "css": [
          "css/teamwork-dark.css"
      ]
    }
  ],
  "browser_action": {
    "default_title ": "Teamwork Chat Fast-Meet Button",
    "default_icon": "img/tw-chat.png",
    "default_popup": "popup.html"
  }
}